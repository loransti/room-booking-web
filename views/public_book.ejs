<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Request a Booking Â· Room Manager</title>
  <link href="https://cdn.jsdelivr.net/npm/@mdi/font@7.4.47/css/materialdesignicons.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/vuetify@3.7.2/dist/vuetify.min.css" rel="stylesheet">
</head>
<body>
  <div id="app">
    <v-app :theme="state.theme">
      <v-main class="d-flex align-center justify-center" style="min-height: 100vh;">
        <v-btn icon variant="text" class="position-absolute" style="top:12px; right:12px" @click="toggleTheme" :title="state.theme==='rmDark' ? 'Light mode' : 'Dark mode'">
          <v-icon :icon="state.theme==='rmDark' ? 'mdi-white-balance-sunny' : 'mdi-weather-night'"></v-icon>
        </v-btn>
        <v-card elevation="8" class="pa-6" max-width="640" width="100%">
          <div class="text-center mb-4">
            <div class="text-h5">Room Manager</div>
            <div class="text-medium-emphasis">Request a Booking</div>
          </div>

          <% if (typeof successId !== 'undefined' && successId) { %>
            <v-alert type="success" variant="tonal" class="mb-4">Thank you! Your request <strong><%= successId %></strong> was submitted. Check your email for confirmation.</v-alert>
          <% } %>

          <% if (errors && errors.length) { %>
            <v-alert type="error" variant="tonal" class="mb-4">
              <ul class="mb-0">
                <% errors.forEach(e => { %>
                  <li><%= e %></li>
                <% }) %>
              </ul>
            </v-alert>
          <% } %>

          <form method="POST" action="/book">
            <v-row>
              <v-col cols="12">
                <v-text-field label="Full name" name="name" required value="<%= (old && old.name) || '' %>" prepend-inner-icon="mdi-account"></v-text-field>
              </v-col>
              <v-col cols="12" sm="6">
                <v-text-field label="Room number" name="room" required value="<%= (old && old.room) || '' %>" prepend-inner-icon="mdi-door"></v-text-field>
              </v-col>
              <v-col cols="12" sm="6">
                <v-text-field label="Telegram username (optional)" name="tg_username" prefix="@" value="<%= (old && old.tg_username) || '' %>" prepend-inner-icon="mdi-telegram"></v-text-field>
              </v-col>
              <v-col cols="12" sm="6">
                <v-text-field label="Email (optional)" name="email" type="email" value="<%= (old && old.email) || '' %>" prepend-inner-icon="mdi-email"></v-text-field>
              </v-col>
              <v-col cols="12" sm="6">
                <v-text-field label="Phone (optional)" name="phone" type="tel" value="<%= (old && old.phone) || '' %>" prepend-inner-icon="mdi-phone"></v-text-field>
              </v-col>
              <v-col cols="12" sm="6">
                <v-text-field label="Date" name="date" type="date" required value="<%= selectedDate %>" prepend-inner-icon="mdi-calendar"></v-text-field>
              </v-col>
              <v-col cols="12" sm="6">
                <label class="text-medium-emphasis d-block mb-1">Time slot</label>
                <select name="slot" required class="v-field v-field--variant-filled" style="padding: 12px; width: 100%; border-radius: 8px; border: 1px solid #e6e8ec;">
                  <option value="">Select a slot</option>
                  <% timeSlots.forEach(s => { %>
                    <option value="<%= s.start %>" <%= old && parseInt(old.slot)===s.start ? 'selected' : '' %>><%= s.display %></option>
                  <% }) %>
                </select>
              </v-col>
              <v-col cols="12">
                <div class="text-medium-emphasis mb-2">Provide at least one: email or phone. Telegram username is optional.</div>
                <v-btn type="submit" color="primary" block prepend-icon="mdi-send">Submit request</v-btn>
              </v-col>
            </v-row>
          </form>
        </v-card>
      </v-main>
    </v-app>
  </div>
  <script src="https://unpkg.com/vue@3/dist/vue.global.prod.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/vuetify@3.7.2/dist/vuetify.min.js"></script>
  <script>
    const { createApp, reactive } = Vue; const { createVuetify } = Vuetify;
    const vuetify = createVuetify({
      theme: {
        defaultTheme: 'rmTheme',
        themes: {
          rmTheme: { dark: false, colors: { primary:'#7c3aed', secondary:'#06b6d4', surface:'#ffffff', background:'#f6f7fb' } },
          rmDark: { dark: true, colors: { primary:'#9E7CFF', secondary:'#3bd0e5', surface:'#181A1F', background:'#0F1115' } }
        }
      }
    });
    const prefersDark = window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches;
    const savedTheme = localStorage.getItem('rm-theme');
    const state = reactive({ theme: savedTheme || (prefersDark ? 'rmDark':'rmTheme') });
    function toggleTheme(){ state.theme = state.theme==='rmDark'?'rmTheme':'rmDark'; localStorage.setItem('rm-theme', state.theme); }
    createApp({ setup(){ return { state, toggleTheme }; } }).use(vuetify).mount('#app');
  </script>
</body>
</html>
